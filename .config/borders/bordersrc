#!/bin/bash

# ç¾åœ¨ã®æ™‚åˆ»ï¼ˆ0ã€œ23ï¼‰
hour=$(date +%H)

# ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆã®è‰²
active_color="0xfffddde6"   # æœï¼šæ¡œè‰²
inactive_color="0xfffbfaf5" # å’Œç´™ã®ç™½

# æ™‚é–“å¸¯ã«å¿œã˜ã¦è‰²ã‚’åˆ‡ã‚Šæ›¿ãˆ
if ((hour >= 5 && hour <= 10)); then
  # ðŸŒ… æœ
  active_color="0xfffddde6"   # æ¡œè‰²
  inactive_color="0xfffbfaf5" # èƒ¡ç²‰
elif ((hour >= 11 && hour <= 15)); then
  # ðŸŒž æ˜¼
  active_color="0xffa6c8b2" # æµ…è‘±ï¼ˆé’ç·‘ï¼‰
  inactive_color="0xfffbfaf5"
elif ((hour >= 16 && hour <= 18)); then
  # ðŸŒ‡ å¤•
  active_color="0xffc77966"   # æŸ¿æ¸‹
  inactive_color="0xfff5e9dc" # ã‚„ã‚„æš–è‰²å¯„ã‚Šã®ç”Ÿæˆã‚Š
else
  # ðŸŒ™ å¤œ
  active_color="0xff1f1f1f"   # å¢¨è‰²
  inactive_color="0xffdcd8d0" # æ¸‹ã‚ã®å’Œç´™è‰²
fi

# active_color=0xFFC3F8F7 # #C3F8F7
# inactive_color=0xff3e1366

# borders ã®è¨­å®š
options=(
  style=round
  order=above
  width=1.5
  hidpi=on
  active_color=$active_color
  inactive_color=$inactive_color
)

borders "${options[@]}"
